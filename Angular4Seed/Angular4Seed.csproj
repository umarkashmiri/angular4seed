  <ItemGroup>
    <None Remove="src\app\account\account-routing.ts" />
    <None Remove="src\app\app-routing.ts" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="src\assets\img\shortcode\carousel\" />
    <Folder Include="src\assets\img\video\" />
